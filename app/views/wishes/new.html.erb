<h1>新規登録</h1>
<%= link_to '戻る',wishes_path, class:'nav-link'%>

<%= form_with model: @wish, local: true do |form|%>

<div class='form-group'>
<%= form.label :title,"タイトル"%>
<%= form.text_field :title, class:'form-control' %>
</div>


<div class='form-group'>
<%= form.label :description,"詳細"%>
<%= form.text_area :description, size: '8x8',class:'form-control' %>
</div>


<div class='form-group'>
<%= form.label :description_link1,"関連リンク(3つまで登録可)"%>
<%= form.text_field :description_link1, class:'form-control' %>
</div>

<div class='form-group'>

<%= form.text_field :description_link2, class:'form-control' %>
</div>

<div class='form-group'>
<%= form.text_field :description_link3, class:'form-control' %>
</div>

<%= form.submit '登録する', class:'btn btn-primary'%>
<% end %>