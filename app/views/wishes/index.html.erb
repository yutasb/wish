<% content_for(:html_title) { 'Wish | 一覧' } %>
<div class='searchBox'>
    <div class='mt5'>
        <%= search_form_for @search, url:wishes_path do |f|%>
            <%= f.search_field :title_cont,placeholder:"タイトル"%>
            <%= f.submit '検索', class:"btn btn-primary"%>
        <% end %>
        <div class='mt10'>カテゴリ</div>
        <div class='cp_ipselect cp_sl03'>
            <select>
                <option value="hidden">選択してください</option>
                <option value="サンプル">サンプル</option>
            </select>
        </div>
        <input type='button' value='検索' class='btn btn-primary'>
    </div>
</div>
<div class='wishList'>
    <% @wishes.each do |wish| %>
        <% if wish.private_flg == false%>
            <div class='oneWish thumnailTextP'>
                <% if wish.done_wish(wish)%>
                    <% if wish.user.image.url%>
                        <%=link_to image_tag("#{wish.user.image.url}",class:'thumbnailImg'),otherpage_path(wish.user_id) %>
                    <%else%>
                        <%= link_to image_tag('no-image.png',class:'thumbnailImg'),otherpage_path(wish.user_id) %>
                    <%end%>
                        <%= link_to "#{wish.title}",wish_path(wish.id),class:'thumnailText doneLine'%>
                        <% if wish.favorited_by?(current_user)%>
                            <div><%=link_to "気になるを解除", wish_favorites_path(wish.id), class:'btn btn-danger', method: :delete %></div>
                        <% else%>
                            <div><%=link_to "気になる", wish_favorites_path(wish.id),class:'btn btn-wish', method: :post %></div>
                    <%end%>
                <% else%>
                    <% if wish.user.image.url%>
                        <%=link_to image_tag("#{wish.user.image.url}",class:'thumbnailImg'),otherpage_path(wish.user_id) %>
                    <%else%>
                        <%= link_to image_tag('no-image.png',class:'thumbnailImg'),otherpage_path(wish.user_id) %>
                    <%end%>
                    <%= link_to "#{wish.title}",wish_path(wish.id),class:'thumnailText'%>
                    <% if wish.favorited_by?(current_user)%>
                    <div>
                        <%=link_to "気になるを解除", wish_favorites_path(wish.id), class:'btn btn-danger', method: :delete %>
                        </div>
                    <% else%>
                        <div><%=link_to "気になる", wish_favorites_path(wish.id),class:'btn btn-wish', method: :post %></div>
                    <%end%>
                <% end%>
            </div>
        <%end%>
    <%end%>
</div>

