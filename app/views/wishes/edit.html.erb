<h1>Wishes#edit</h1>
<%= link_to '編集しないで戻る', wish_path(@wish), class:'nav-link'%>
<%= form_with model: @wish, method: :patch, local: true do |form|%>

    <div class='form-group'>
        <%= form.label :title%>
        <%= form.text_field :title, class:'form-control' %>
    </div>


    <div class='form-group'>
        <%= form.label :description%>
        <%= form.text_area :description, size: '8x8',class:'form-control' %>
    </div>


    <div class='form-group'>
        <%= form.label :description_link1%>
        <%= form.text_field :description_link1, class:'form-control' %>
    </div>

    <div class='form-group'>
        <%= form.label :description_link2%>
        <%= form.text_field :description_link2, class:'form-control' %>
    </div>

    <div class='form-group'>
        <%= form.label :description_link3%>
        <%= form.text_field :description_link3, class:'form-control' %>
    </div>

    <%= form.submit '更新する', class:'btn btn-primary'%>
<% end %>